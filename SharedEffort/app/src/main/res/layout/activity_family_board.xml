<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FamilyBoardActivity"
    android:padding="10dp">

    <RelativeLayout
        android:id="@+id/activity_familyBoard_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Spinner
            android:id="@+id/activity_familyBoard_userSpinner"
            android:layout_width="135dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/activity_familyBoard_points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text=""/>

        <ImageButton
            android:id="@+id/activity_familyBoard_logout_btn"
            style="@style/ButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/sign_out"
            android:layout_marginTop="17dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

    <ScrollView
        android:id="@+id/activity_familyBoard_scrollView"
        android:layout_width="wrap_content"
        android:layout_height="410dp"
        app:layout_constraintTop_toBottomOf="@+id/activity_familyBoard_top">

        <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/activity_familyBoard_table"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/activity_familyBoard_top"
            android:stretchColumns="1">

            <TableRow>
                <android.support.constraint.ConstraintLayout
                    android:layout_width="120dp">
                    <TextView
                        android:id="@+id/monday"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_column="1"
                        android:padding="3dip"
                        android:text="Lundi"
                        android:textSize="20dp"/>
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:id="@+id/activity_familyBoard_monday_text"
                        android:padding="3dip"
                        android:layout_column="1"
                        android:textSize="10dp"
                        app:layout_constraintTop_toBottomOf="@+id/monday"
                            />

                </android.support.constraint.ConstraintLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:id="@+id/activity_familyBoard_monday"
                    >
                </LinearLayout>
            </TableRow>

            <TableRow>

                <android.support.constraint.ConstraintLayout>
                    <TextView
                        android:id="@+id/tuesday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:padding="3dip"
                        android:text="Mardi"
                        android:textSize="20dp"/>

                    <TextView
                        android:id="@+id/activity_familyBoard_tuesday_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="3dip"
                        android:layout_column="1"
                        android:textSize="10dp"
                        app:layout_constraintTop_toBottomOf="@+id/tuesday"
                        />
                </android.support.constraint.ConstraintLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/activity_familyBoard_tuesday"
                    >

                </LinearLayout>
            </TableRow>

            <TableRow>
                <android.support.constraint.ConstraintLayout
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/wednesday"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_column="1"
                        android:padding="3dip"
                        android:text="Mercredi"
                        android:textSize="20dp"/>

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:id="@+id/activity_familyBoard_wednesday_text"
                        android:padding="3dip"
                        android:layout_column="1"
                        android:textSize="10dp"
                        app:layout_constraintTop_toBottomOf="@+id/wednesday"
                        />
                </android.support.constraint.ConstraintLayout>


                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/activity_familyBoard_wednesday"
                    >

                </LinearLayout>
            </TableRow>

            <TableRow>

                <android.support.constraint.ConstraintLayout>
                    <TextView
                        android:id="@+id/thursday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:padding="3dip"
                        android:text="Jeudi"
                        android:textSize="20dp"/>

                    <TextView
                        android:id="@+id/activity_familyBoard_thursday_text"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:padding="3dip"
                        android:layout_column="1"
                        android:textSize="10dp"
                        app:layout_constraintTop_toBottomOf="@+id/thursday"
                        />
                </android.support.constraint.ConstraintLayout>
                    <LinearLayout
                        android:layout_width="200dp"
                        android:orientation="vertical"
                        android:id="@+id/activity_familyBoard_thursday"
                        >
                    </LinearLayout>
            </TableRow>

            <TableRow>

                <android.support.constraint.ConstraintLayout>
                    <TextView
                        android:id="@+id/friday"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_column="1"
                        android:padding="3dip"
                        android:text="Vendredi"
                        android:textSize="20dp"/>
                    <TextView
                        android:id="@+id/activity_familyBoard_friday_text"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:padding="3dip"
                        android:layout_column="1"
                        android:textSize="10dp"
                        app:layout_constraintTop_toBottomOf="@+id/friday"
                        />

                </android.support.constraint.ConstraintLayout>


                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/activity_familyBoard_friday"
                    >

                </LinearLayout>

            </TableRow>

            <TableRow>

                <android.support.constraint.ConstraintLayout>
                    <TextView
                        android:id="@+id/saturday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:padding="3dip"
                        android:text="Samedi"
                        android:textSize="20dp"/>

                    <TextView
                        android:id="@+id/activity_familyBoard_saturday_text"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:padding="3dip"
                        android:layout_column="1"
                        android:textSize="10dp"
                        app:layout_constraintTop_toBottomOf="@+id/saturday"
                        />
                </android.support.constraint.ConstraintLayout>


                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/activity_familyBoard_saturday"
                    >

                </LinearLayout>

            </TableRow>

            <TableRow>

                <android.support.constraint.ConstraintLayout>
                    <TextView
                        android:id="@+id/sunday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:padding="3dip"
                        android:text="Dimanche"
                        android:textSize="20dp"/>

                    <TextView
                        android:id="@+id/activity_familyBoard_sunday_text"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:padding="3dip"
                        android:layout_column="1"
                        android:textSize="10dp"
                        app:layout_constraintTop_toBottomOf="@+id/sunday"
                        />
                </android.support.constraint.ConstraintLayout>


                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/activity_familyBoard_sunday"
                    >

                </LinearLayout>
            </TableRow>

        </TableLayout>
    </ScrollView>

        <RelativeLayout
            android:id="@+id/activity_familyBoard_week_btns"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            >
            <ImageButton
                android:id="@+id/activity_familyBoard_previous_week_btn"
                style="@style/ButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleX="0.6"
                android:scaleY="0.6"
                android:src="@drawable/previous"
                />

            <ImageButton
                android:id="@+id/activity_familyBoard_add_btn"
                style="@style/ButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/add"
                android:layout_marginTop="17dp"
                android:layout_centerHorizontal="true"
                />

            <ImageButton
                android:id="@+id/activity_familyBoard_next_week_btn"
                style="@style/ButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleX="0.6"
                android:scaleY="0.6"
                android:src="@drawable/next"
                android:layout_alignParentRight="true"
                />

        </RelativeLayout>
</android.support.constraint.ConstraintLayout>