<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EventDetailActivity"
    android:padding="20dp">

    <TextView
        android:id="@+id/activity_eventDetail_eventName_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nom de l'événement"/>
    <TextView
        android:id="@+id/activity_eventDetail_eventName"
        app:layout_constraintTop_toBottomOf="@id/activity_eventDetail_eventName_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/activity_eventDetail_eventDescription_text"
        app:layout_constraintTop_toBottomOf="@id/activity_eventDetail_eventName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description de l'événement"/>
    <TextView
        android:id="@+id/activity_eventDetail_eventDescription"
        app:layout_constraintTop_toBottomOf="@id/activity_eventDetail_eventDescription_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/activity_eventDetail_eventDate_text"
        app:layout_constraintTop_toBottomOf="@id/activity_eventDetail_eventDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date de l'événement"/>
    <TextView
        android:id="@+id/activity_eventDetail_eventDate"
        app:layout_constraintTop_toBottomOf="@id/activity_eventDetail_eventDate_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</android.support.constraint.ConstraintLayout>